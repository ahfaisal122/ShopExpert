@using ShopEx.Models
@{
    ViewBag.Title = "advertisementView";
}

<center><h1><b></b>Discount & Sale Offers<b></b></h1></center>


<!DOCTYPE html>
<html>
<title>W3.CSS Template</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
<style>
    body, h1, h2, h3, h4, h5, h6 {
        font-family: "Karma", sans-serif;
    }

    .w3-bar-block .w3-bar-item {
        padding: 20px;
    }
</style>
<body>

   

<h2><img src="~/Images/Sale.gif" style="width: 100%; height: 100px;"></h2>

    <!-- !PAGE CONTENT! -->
    <div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">

        <!-- First Photo Grid-->

        @using (ApplicationDbContext db = new ApplicationDbContext())
        {
            var ff = 0;
            var model = db.Advertisements.ToList();
            var g = model.Count;


            for (int i = 0; i < model.Count; i++)
            {

                var cnt = 0;
                <div class=w3-row-padding w3-padding-16 w3-center>
                    @for (int j = i; j < model.Count; j++)
                    {
                        cnt++;
                        byte[] pic = model[j].pics;
                        string name = model[j].pageName;
                        string s = model[j].information;
                        string link = model[j].ShopExpertpageLink;
                        string imreBase64Data = Convert.ToBase64String(model[i].pics);
                        
                        string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data);

                        <div class="w3-quarter">
                            <a href="@link">
                                
                                <img src="@imgDataURL" alt="Sandwich" style="width: 100%">
                                <h3>@name</h3>
                                <p>@s</p>
                            </a>
                        </div>
                        if (cnt == 4)
                        { break; }
                        i++;
                    }
                </div>

            }






        }
      

       

        <!-- Pagination -->
        <div class="w3-center w3-padding-32">
            <div class="w3-bar">
                <a href="~/advertisements/advertisementView" class="w3-bar-item w3-button w3-hover-black">See All</a>
            </div>
        </div>
    </body>